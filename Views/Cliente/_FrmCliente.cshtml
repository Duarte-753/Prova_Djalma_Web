@model Prova_web.Models.Cliente

<div class="form-horizontal">
    <br /> 
    <br /> 
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row form-group">
        <div class="col-md-6">
            @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-6" })
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Julio Duarte" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model => model.DataNasc, htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.DataNasc, new { htmlAttributes = new { @class = "form-control", placeholder = "dd/MM/yyyy" } })
            @Html.ValidationMessageFor(model => model.DataNasc, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-3">
            @Html.LabelFor(model => model.Telefone, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", placeholder = "Ex: (11)99999-9999" } })
            @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="row form-group">
        <div class="col-md-9">
            @Html.LabelFor(model => model.EMail, htmlAttributes: new { @class = "control-label col-md-2" })

            @Html.EditorFor(model => model.EMail, new { htmlAttributes = new { @class = "form-control col-12", placeholder = "outlook@gmail.com" } })
            @Html.ValidationMessageFor(model => model.EMail, "", new { @class = "text-danger" })
        </div>
        <div class="col-3">
            @Html.LabelFor(model => model.Vendedor)
            @Html.DropDownList("Vendedor", new SelectList(ViewBag.ListaVendedores, "Nome", "Nome"), "Selecione qual vendedor..." , new { @class = "form-control dropdown-toggle col-12" })
        </div>
    </div>
</div>
