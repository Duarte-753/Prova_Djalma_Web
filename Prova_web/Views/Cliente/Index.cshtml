@model Prova_web.Models.Cliente

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Cliente"))
{
    <input type="submit" value="Pesquisar" class="btn btn-dark" />
    
    <div class="row">
        <br />
        <div class="col-8">
            @Html.LabelFor(model => model.Nome)
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control col-12" } })
        </div>
        <div class="col-4">
            @Html.LabelFor(model => model.Vendedor)
            @Html.DropDownList("Vendedor", new SelectList(ViewBag.ListaVendedores, "Nome", "Nome"), "Selecione um vendedor...", new { @class = "form-control dropdown-toggle col-12" })

        </div>
    </div>
    <br />

}

<br />



<h2>Index</h2>

@using (Html.BeginForm("NovoCliente", "Cliente"))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <br>
            <input type="submit" value="Novo Cliente" class="btn btn-primary" />
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataNasc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vendedor)
        </th>
        <th></th>
    </tr>

    @if (ViewBag.ListaClientes != null)
    {
        foreach (var item in ViewBag.ListaClientes)
        {
            <tr>
                <td>
                    @Html.Raw(item.Nome)
                </td>
                <td>
                    @Html.Raw(item.Telefone)
                </td>
                <td>
                    @Html.Raw(item.EMail)
                </td>
                <td>
                    @Html.Raw(item.DataNasc)
                </td>
                <td>
                    @Html.Raw(item.Vendedor)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditarCliente", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }


</table>
